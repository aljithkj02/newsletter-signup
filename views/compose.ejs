    <h1>Compose</h1>
    <form action="/compose" method="post">
        <label for="postTitle">Title</label>
        <input id="postTitle" type="text" name="postTitle" class="form-control">
        <label for="postBody">Post</label>
        <textarea name="postBody" id="postBody" cols="30" rows="5" class="form-control"></textarea>
        <button class="btn btn-primary mt-4" type="submit">Publish</button>
    </form>

